<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.harsh.instatagsample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".InstaTagSampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_insta_tag"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activities.DashBoardActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.InstaActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TagPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SomeOneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TaggedPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DragTestActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>